<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1512149074996-e923ac45be6a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzF8fG1vdmllc3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60);">
  <div class="container">
    <h1>Movie Lists</h1>
    <%= link_to "Add a new list", new_list_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container">
  <div class="cards-container mt-3">
    <h1>Index Lists</h1>
          <% @lists.each do |list| %>
      <div class="cards">
        <div class="card">
            <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
            <h4><%= link_to list.name, list_path(list) %></h4>
            <%= link_to 'Delete', list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
      </div>
        <% end %>
  </div>
</div>
